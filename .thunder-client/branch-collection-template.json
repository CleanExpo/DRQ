{
  "client": "Thunder Client",
  "collectionName": "DRQ Website API - ${BRANCH_NAME}",
  "dateExported": "2024-11-28T12:00:00.000Z",
  "version": "1.1",
  "folders": [
    {
      "name": "Service Areas",
      "items": [
        {
          "name": "Get All Service Areas",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/service-areas",
            "headers": {
              "Content-Type": "application/json"
            }
          },
          "tests": [
            {
              "name": "Status 200",
              "test": "response.status === 200"
            },
            {
              "name": "Has Data Array",
              "test": "response.body.data && Array.isArray(response.body.data)"
            }
          ]
        },
        {
          "name": "Get Service Area by Postcode",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/service-areas",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "postcode": "4000"
            }
          },
          "tests": [
            {
              "name": "Status 200",
              "test": "response.status === 200"
            },
            {
              "name": "Valid Response",
              "test": "response.body.data && response.body.statusCode === 200"
            }
          ]
        }
      ]
    },
    {
      "name": "Cache Management",
      "items": [
        {
          "name": "Clear Cache",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/cache/clear",
            "headers": {
              "Content-Type": "application/json"
            }
          }
        },
        {
          "name": "Cache Stats",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/cache/stats",
            "headers": {
              "Content-Type": "application/json"
            }
          }
        }
      ]
    },
    {
      "name": "Sitemap",
      "items": [
        {
          "name": "Get Sitemap",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/sitemap",
            "headers": {
              "Accept": "application/xml"
            }
          },
          "tests": [
            {
              "name": "Status 200",
              "test": "response.status === 200"
            },
            {
              "name": "XML Content",
              "test": "response.headers['content-type'].includes('application/xml')"
            }
          ]
        }
      ]
    },
    {
      "name": "Health Checks",
      "items": [
        {
          "name": "API Health",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/health"
          }
        },
        {
          "name": "MongoDB Health",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/health/mongodb"
          }
        }
      ]
    }
  ],
  "environments": [
    {
      "name": "Development",
      "data": {
        "baseUrl": "http://localhost:3002"
      }
    },
    {
      "name": "Staging",
      "data": {
        "baseUrl": "https://${BRANCH_NAME}.staging.disasterrecoveryqld.au"
      }
    }
  ],
  "settings": {
    "headers": [
      {
        "name": "User-Agent",
        "value": "Thunder-Client-Test"
      }
    ],
    "test": {
      "responseTime": 3000,
      "environmentVariables": true
    }
  }
}
