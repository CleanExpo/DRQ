{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
      "@testing-library/react",
      "@testing-library/user-event"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.ts",
    "src/types/test.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
