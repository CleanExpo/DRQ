{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "@testing-library/react",
      "@testing-library/user-event",
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.setup.ts",
    "src/test/**/*"
  ],
  "exclude": ["node_modules", ".next", "out"]
}
