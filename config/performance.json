{
  "thresholds": {
    "lighthouse": {
      "performance": 90,
      "accessibility": 90,
      "bestPractices": 90,
      "seo": 90
    },
    "metrics": {
      "firstContentfulPaint": 1500,
      "largestContentfulPaint": 2500,
      "timeToInteractive": 3000,
      "totalBlockingTime": 200,
      "cumulativeLayoutShift": 0.1,
      "speedIndex": 2000
    },
    "size": {
      "maxBundleSize": 244000,
      "maxImageSize": 100000,
      "maxFontSize": 50000,
      "maxCssSize": 20000
    }
  },
  "optimization": {
    "images": {
      "formats": ["webp", "avif"],
      "quality": 80,
      "sizes": [640, 750, 828, 1080, 1200, 1920],
      "placeholder": "blur"
    },
    "compression": {
      "gzip": {
        "enabled": true,
        "level": 9
      },
      "brotli": {
        "enabled": true,
        "quality": 11
      }
    },
    "caching": {
      "staticAssets": {
        "maxAge": 31536000,
        "immutable": true
      },
      "dynamicContent": {
        "maxAge": 3600,
        "revalidate": true
      },
      "api": {
        "maxAge": 300,
        "staleWhileRevalidate": 60
      }
    }
  },
  "monitoring": {
    "sampling": {
      "pageLoad": 100,
      "navigation": 100,
      "networkRequests": 50,
      "errors": 100
    },
    "alerts": {
      "responseTime": {
        "warning": 2000,
        "critical": 5000
      },
      "errorRate": {
        "warning": 1,
        "critical": 5
      },
      "availability": {
        "warning": 99.9,
        "critical": 99
      }
    },
    "reporting": {
      "interval": 300,
      "retention": {
        "raw": 7,
        "aggregated": 90
      }
    }
  },
  "resources": {
    "preload": [
      "/fonts/inter-var.woff2",
      "/images/hero.webp",
      "/styles/critical.css"
    ],
    "prefetch": [
      "/api/service-areas",
      "/images/services/*.webp"
    ],
    "preconnect": [
      "https://cdn.disasterrecoveryqld.au",
      "https://api.disasterrecoveryqld.au"
    ]
  },
  "optimization_rules": {
    "javascript": {
      "minify": true,
      "treeshake": true,
      "splitChunks": true,
      "lazyLoad": {
        "enabled": true,
        "threshold": 1000
      }
    },
    "css": {
      "minify": true,
      "purge": true,
      "critical": true,
      "inlineLimit": 10000
    },
    "fonts": {
      "display": "swap",
      "subset": true,
      "preloadFontFiles": true
    },
    "images": {
      "lazy": true,
      "responsive": true,
      "optimizeOnBuild": true,
      "defaultQuality": 80
    }
  },
  "testing": {
    "locations": [
      "Sydney",
      "Brisbane",
      "Melbourne"
    ],
    "devices": [
      "Mobile - iPhone X",
      "Desktop - Chrome",
      "Tablet - iPad"
    ],
    "connections": [
      "4G",
      "3G",
      "Slow 3G"
    ]
  },
  "budgets": {
    "javascript": {
      "total": 300000,
      "initial": 100000,
      "async": 200000
    },
    "css": {
      "total": 50000,
      "initial": 20000,
      "async": 30000
    },
    "images": {
      "total": 500000,
      "perImage": 100000
    },
    "fonts": {
      "total": 100000,
      "perFont": 30000
    }
  },
  "optimization_schedule": {
    "image_optimization": "0 0 * * *",
    "bundle_analysis": "0 1 * * *",
    "performance_audit": "0 2 * * *",
    "cache_warmup": "0 3 * * *",
    "report_generation": "0 4 * * *"
  }
}
